{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur le Blog
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3">Voici la liste de nos articles</h1>

        <div class="row">

            {% for post in posts %}
                <div class="col-2">

                    <small>Dans la cat√©gorie :
                        {{ post.category.title }}
                    </small>
                </div>
                {# <div class="col-2"></div> #}
                <div class="col-10 mb-3">
                    <h2>{{ post.title }}</h2>
                    <a href="{{ path('post_show', {'id': post.id}) }}">
                        <img src="{{post.image}}" alt="{{post.title}}">
                    </a>
                    <p>{{ post.introduction }}</p>
                    <ul>
                        {% for tag in post.tags %}
                            <li>{{tag.title}}</li>
                        {% endfor %}
                    </ul>
                    <a href="{{ path('post_show', {'id': post.id}) }}">Lire la suite</a>
                </div>

            {% endfor %}
        </div>
    </div>

</div>{% endblock %}
