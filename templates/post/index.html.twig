{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur le Blog
{% endblock %}

{% block body %}
    <h1>Voici la liste de nos articles</h1>

    {% for post in posts %}
        <h2>{{ post.title }}</h2>
        <small>Dans la cat√©gorie :
            {{ post.category.title }}
        </small>
        <img src="{{post.image}}" alt="{{post.title}}">
        <p>{{ post.introduction }}</p>
        <ul>
            {% for tag in post.tags %}
                <li>{{tag.title}}</li>
            {% endfor %}
        </ul>
        <a href="#">Lire la suite</a>
    {% endfor %}

{% endblock %}
