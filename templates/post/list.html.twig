{% block title %}Liste des articles
{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    {% for post in posts %}
        <img src="{{ post.image }}" alt="">
        <h2>{{ post.title | upper }}
            ({{ post.category.title }})</h2>
        {#<ul>
                            {% for tag in post.tags %}
                                <li>{{ tag.title }}</li>
                            {% endfor %}
                        </ul>#}
        <p>{{ post.introduction }}</p>
        <a href="#">Lire la suite</a>
        <hr/>
    {% endfor %}

{% endblock %}
