{% extends "base.html.twig" %}

{% block title %}
    Article
    {{post.id}}
{% endblock %}

{% block body %}
    <h1>{{post.title}}</h1>
    <small>
        {{post.category.title}}
    </small>
    <img src="{{post.image}}" alt="{{post.title}}">
    <p>
        {{post.introduction}}
    </p>

    <hr>

    {{post.content | nl2br}}


    <p>
        <strong>
            Tags:</strong>
        {% for tag in post.tags %}
            <span>
                {{tag.title}}
            </span>
        {% endfor %}
    </p>
{% endblock %}
